#! /bin/sh

killall -q conky &
killall -q juiced &
killall -q slstatus &

xsetroot -cursor_name left_ptr

# key grabber
#sxhkd &
"$HOME/bin/keybinds.sh"

xrdb -l "$HOME/.Xresources" &
xmodmap "$HOME/.Xmodmap" &
xsetroot -solid darkblue &

# battery monitor
juiced -d

numlockx on &

# wallpaper
# nitrogen --restore &
"$HOME/.fehbg" &

# system info
# "$HOME/bin/conkybspwm.sh"
# "$HOME/bin/bspwmbar.sh"
"$HOME/.config/bspwm/tint2start.sh"

bspc monitor -d 1: 2: 3: 4:

bspc config border_width         2
bspc config window_gap           0

bspc config top_padding          24
bspc config right_padding        0
bspc config bottom_padding       0
bspc config left_padding         0

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config normal_border_color "#1B1B1C"
bspc config focused_border_color "#494C4A"
bspc config active_border_color "#3E3E3E"

bspc config pointer_modifier     mod1

bspc rule -a Gimp desktop='^4' follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a XCalc state=floating
bspc rule -a Galculator state=floating
bspc rule -a XFontSel state=floating
bspc rule -a Sakura state=floating
bspc rule -a YadCal state=floating
bspc rule -a ColorBox state=floating
bspc rule -a FontBox state=floating
bspc rule "Yad-icon-browser" state=floating
bspc rule "Yad_Calendar" state=floating
bspc rule "Gcolor2" state=floating