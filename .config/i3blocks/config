# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
#[memory]
#label=MEM
#instance=mem
#separator=false
#interval=3

[RAM]
label=MEM
separator=false
interval=3
command=free | awk '/Mem/{printf("%.0f%"), $3/$2*100}'
min_width=80
align=center

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=BAT
#label=âš¡
instance=0
separator=false
interval=10
min_width=80
align=center

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
#[iface]
#instance=wlp1s0
#color=#00FF00
#interval=10
#separator=false

[wifi]
label=NET
instance=wlp1s0
interval=10
separator=false
interval=10
min_width=80
align=center

[bandwidth]
instance=wlp1s0
interval=5
separator=false
interval=10
min_width=80
align=center

# Date Time
#
[time]
command=date '+%a %e %b %k:%M'
interval=3
separator=false
interval=10
min_width=164
align=center
