#[loadavg2]
#interval=3
#separator=false
#min_width=100
#align=center

[load_average]
interval=3
min_width=80
align=center
separator=false
command=awk '{print $1" "$2" "$3}' < /proc/loadavg

# Temperature
#
# Support multiple chips, though lm-sensors.
