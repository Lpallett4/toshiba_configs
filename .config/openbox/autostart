xrdb -l "$HOME/.Xresources" &
xmodmap "$HOME/.Xmodmap" &
numlockx on &
xsetroot -solid darkblue &

juiced -d

(sleep 2s && nitrogen --restore) &

# (sleep 2s && tint2 -c /home/doug/.config/tint2/tint2obxrc) &
