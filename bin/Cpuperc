#!/bin/sh

exec mpstat 1 1 | awk '$3 ~ /CPU/ { for(i=1;i<=NF;i++) { if ($i ~ /%idle/) field=i } } $3 ~ /all/ { printf("%d%",100 - $field) }'
#exec top -bn 2 -d 0.01 | grep '^%Cpu' | tail -n 1 | gawk '{print $2 "%"}'
#grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage "%"}'

exit 0
