conky.text = [[
${voffset 16}${goto 12}Uptime:${goto 128}${uptime_short}
${voffset 16}${goto 12}CPU:${goto 128}${if_match ${cpu}<=50}${color7}${else}${if_match ${cpu}<=70}${color8}${else}${if_match ${cpu}>70}${color9}${endif}${endif}${endif}${cpu cpu0}%${color}
${voffset 8}${goto 128}${loadavg 1}${offset 10}${loadavg 2}${offset 10}${loadavg 3}
${voffset 16}${goto 12}RAM:${goto 128}${if_match ${memperc}<=50}${color7}${else}${if_match ${memperc}<=70}${color8}${else}${if_match ${memperc}>70}${color9}${endif}${endif}${endif}${memperc}%${color}
${voffset 16}${goto 12}Core0:${goto 128}${if_match ${hwmon 0 temp 4}<=50}${color7}${else}${if_match ${hwmon 0 temp 4}<=70}${color8}${else}${if_match ${hwmon 0 temp 4}>70}${color9}${endif}${endif}${endif}${hwmon 0 temp 4}${offset 2}°C${color}
${voffset 16}${goto 12}Core1:${goto 128}${if_match ${hwmon 0 temp 4}<=50}${color7}${else}${if_match ${hwmon 0 temp 4}<=70}${color8}${else}${if_match ${hwmon 0 temp 4}>70}${color9}${endif}${endif}${endif}${hwmon 0 temp 4}${offset 2}°C${color}${voffset 16}
]];
