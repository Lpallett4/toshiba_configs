WindowTitle {SysInfo}
WindowSize  600 28
Font "xft:Fira Code:style=Retina:size=11"
Colorset 22 

Init
 Begin
  Set $Sinfo = (GetOutput {exec psuinfo -Cuack -N -S3} 1 -1)

  ChangeTitle 1 $Sinfo
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 3)==0 Then
  Begin
   Set $Sinfo = (GetOutput {exec psuinfo -Cuack -N -S3} 1 -1)

   ChangeTitle 1 $Sinfo
  End
End

Widget 1
Property
 Position 2 0
 Size 600 28
 Font "xft:Fira Code:style=Retina:size=11"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

