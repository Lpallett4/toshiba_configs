WindowTitle {DateTime}
WindowSize  90 28
Font "xft:Fira Code:style=Retina:size=12"
Colorset 22

Init
 Begin
  Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
#  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

  ChangeTitle 1 $Time
#  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 20)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
#   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

   ChangeTitle 1 $Time
#   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 90 28
 Font "xft:Fira Code:style=Retina:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
