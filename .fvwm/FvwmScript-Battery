WindowTitle {BatteryPerc}
WindowSize  60 28
Font "xft:Fira Code:style=Retina:size=12"
Colorset 22

Init
 Begin
  Set $MainColorset=(GetScriptArgument 1)
  If $MainColorset <> {} Then
  Begin
   ChangeColorset 0 $MainColorset
   ChangeColorset 0 $MainColorset
  End
  Set $tmp = (GetOutput {exec ~/bin/FvwmBatt.sh} 1 -1)
  ChangeTitle 1 $tmp
End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 10)==0 Then
  Begin
    Set $tmp = (GetOutput {exec ~/bin/FvwmBatt.sh} 1 -1)
    ChangeTitle  1 $tmp
  End
End

Widget 1
Property
 Position 0 0
 Size 60 28
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
